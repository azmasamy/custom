<?xml version="1.0"?>
<odoo>
    <!-- Properties Offer Tree View Customization -->
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept_offer" type="object" icon="fa-check"/>
                <button name="refuse_offer" type="object" icon="fa-times"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Property Offer Form View Customization -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Create Offer">
                <sheet>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>